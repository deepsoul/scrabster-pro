{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/game/create",
      "dest": "/api/game/create.js"
    },
    {
      "src": "/api/game/join",
      "dest": "/api/game/join.js"
    },
    {
      "src": "/api/game/start",
      "dest": "/api/game/start.js"
    },
    {
      "src": "/api/game/submit-word",
      "dest": "/api/game/submit-word.js"
    },
    {
      "src": "/api/game/status/([^/]+)",
      "dest": "/api/game/status/[gameCode].js?gameCode=$1"
    },
    {
      "src": "/api/game/leave",
      "dest": "/api/game/leave.js"
    },
    {
      "src": "/api/game/chat",
      "dest": "/api/game/chat.js"
    },
    {
      "src": "/api/game/new",
      "dest": "/api/game/new.js"
    },
    {
      "src": "/index.html",
      "dest": "/client/dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/client/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
